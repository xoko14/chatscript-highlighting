{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ChatScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#storages"
		},
		{
			"include": "#entities"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.chatscript",
					"match": "\\b(start|define|send)\\b"
				},
				{
					"name": "keyword.operator.chatscript",
					"match": "\\b=\\b"
				}
			]
		},
		"storages":{
			"patterns": [
				{
					"name": "storage.type.chatscript",
					"match": "\\b(sender|chat)\\b"
				}
			]
		},
		"entities":{
			"patterns": [
				{
					"name": "entity.name.tag.chatscript",
					"match": "\\b(title|author|version)\\b"
				},
				{
					"name": "entity.name.type.chatscript",
					"match": "\\b(?<=(sender |send |pov |join=))[^(=|\n)]*\\b"
				},
				{
					"name": "entity.name.function.chatscript",
					"match": "\\b(?<=chat )[^(=|\n)]*\\b"
				}
			]
		}
	},
	"scopeName": "source.chatscript"
}